<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <declare-styleable name="styleable_auto_completeLayout">

        <attr name="TextSize" format="integer" /><!--textview字体大小-->
        <attr name="TextPadding" format="integer"/><!--textview的padding-->
        <attr name="TextColor" format="color"/><!--textview颜色-->
        <attr name="TextBackground" format="integer"></attr><!--textview的Background-->

        <attr name="LineSpacing" format="dimension"/><!-- 每个tv的行间距 -->
        <attr name="ColumnSpacing" format="dimension"/> <!--每个tv的列间距-->
    </declare-styleable>

</resources>
